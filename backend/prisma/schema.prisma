generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  comments  Comment[]
  likes     Like[]
  posts     Post[]    @relation("author_posts")
  shares    Share[]
}

model Post {
  id         String    @id @default(uuid())
  title      String
  content    String
  excerpt    String?
  image      String?
  published  Boolean   @default(false)
  authorId   String?
  categoryId String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  comments   Comment[]
  likes      Like[]
  shares     Share[]
  author     User?     @relation("author_posts", fields: [authorId], references: [id], map: "fk_post_author")
  category   Category? @relation(fields: [categoryId], references: [id], map: "fk_post_category")

  @@index([authorId], map: "idx_post_author")
  @@index([categoryId], map: "idx_post_category")
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  slug        String   @unique
  description String?
  color       String?
  icon        String?
  createdAt   DateTime @default(now())
  posts       Post[]
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  authorId  String
  postId    String
  createdAt DateTime @default(now())
  author    User     @relation(fields: [authorId], references: [id], map: "fk_comment_author")
  post      Post     @relation(fields: [postId], references: [id], map: "fk_comment_post")

  @@index([authorId], map: "idx_comment_author")
  @@index([postId], map: "idx_comment_post")
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], map: "fk_like_post")
  user      User     @relation(fields: [userId], references: [id], map: "fk_like_user")

  @@unique([userId, postId])
  @@index([postId], map: "idx_like_post")
}

model Share {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  platform  String?
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id], map: "fk_share_post")
  user      User     @relation(fields: [userId], references: [id], map: "fk_share_user")

  @@index([postId], map: "idx_share_post")
  @@index([userId], map: "idx_share_user")
}
